@model  Webshop.Models.Wrapper
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DiscountCheese</title>
</head>

<body>
    <header id="indkøbskurv">
        @if (Model.userprofile.id == 0)
        { 
            @Html.ActionLink("Login", "Index", "Login")
        }
        else
        {
            @Html.ActionLink("Bruger Profile", "userProfile", new { id = Model.userprofile.id }) < br />
            @Html.ActionLink("Log ud", "index", new { id = -1 })
        }

        <div>
            @Html.ActionLink("Indkøbskurv", "Index")
        </div>
    </header>
    <div>
        <h1>Discount pris</h1>
        <table id="produktList">
            @foreach (var i in Model.list)
            {
                <tr>
                    <td>
                        Id: @i.id <br />
                        Navn: @i.name<BR />
                        Land: @i.country<br />
                        Bedømmelse: @i.rating<br />
                        Pris: @i.unitPrice<br />
                        @Html.ActionLink("Produkt", "productInfo", new { id = i.id }, new { id = Model.userprofile.id})

                    </td>
                    <td>
                        Billede
                    </td>
                </tr>
            }
        </table>



    </div>
</body>
</html>
